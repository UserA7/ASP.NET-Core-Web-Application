@model PlaylistMVC.Models.SongInfo

@{
    ViewData["Title"] = "Create";
}

<h1>Add to Playlist</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="display:inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SongName" class="control-label">Enter Song Name</label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ArtistName" class="control-label">Enter Artist Name</label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div><br />

            <form asp-action="Create" style="display:inline">
                <button class="button-edit" type="submit" value="Create">Create</button>
            </form>
            <form asp-action="Index" style="display:inline">
                <button class="button-details" type="submit">Back to List</button>
            </form>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
